<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <welcome-file-list>
    <welcome-file>home</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>CustServlet</servlet-name>
    <servlet-class>com.gsoft.controller.CustServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CustServlet</servlet-name>
    <url-pattern>/getCustomers</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>resteasy.scan</param-name>
    <param-value>false</param-value>
  </context-param>
  <context-param>
    <param-name>resteasy.use.deployment.sensitive.factory</param-name>
    <param-value>false</param-value>
  </context-param>
  <context-param>
    <param-name>javax.ws.rs.Application</param-name>
    <param-value>com.sss.core.JerseyApplication</param-value>
  </context-param>
  <servlet>
    <servlet-name>Jersey REST Service</servlet-name>
    <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
    <init-param>
      <param-name>resteasy.servlet.mapping.prefix</param-name>
      <param-value>/core</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Jersey REST Service</servlet-name>
    <url-pattern>/core/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.sss.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>home</servlet-name>
    <servlet-class>com.sss.HomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>SessionFilter</filter-name>
  	<filter-class>com.sss.filter.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>SessionFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
 
</web-app>